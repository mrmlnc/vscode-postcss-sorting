{
  "name": "vscode-postcss-sorting",
  "displayName": "PostCSS Sorting",
  "description": "VS Code plugin to sort CSS rules content with specified order.",
  "version": "2.3.0",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.9.0"
  },
  "icon": "icon.png",
  "homepage": "https://github.com/mrmlnc/vscode-postcss-sorting/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-postcss-sorting"
  },
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "sorting",
    "order"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:postcssSorting.sort"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [{
      "command": "postcssSorting.sort",
      "title": "PostCSS Sorting: Run"
    }],
    "configuration": {
      "type": "object",
      "title": "Postâ€‹CSS Sorting configuration",
      "properties": {
        "postcssSorting": {
          "type": ["object", "string"],
          "default": {},
          "description": "Settings for PostCSS Sorting plugin"
        }
      }
    }
  },
  "devDependencies": {
    "@types/micromatch": "^2.3.29",
    "@types/mocha": "^2.2.39",
    "@types/node": "^7.0.5",
    "mocha": "^3.2.0",
    "tslint": "^5.1.0",
    "tslint-config-xo": "^1.1.0",
    "typescript": "^2.1.6",
    "vscode": "^1.0.3"
  },
  "dependencies": {
    "postcss": "5.1.2",
    "postcss-less": "0.15.0",
    "postcss-scss": "0.4.1",
    "postcss-sorting": "2.0.1",
    "vscode-config-resolver": "^1.0.1"
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "clean": "rimraf out",
    "lint": "tslint src/**/*.ts",
    "compile": "tsc",
    "build": "npm run clean && npm run lint && npm run compile",
    "watch": "npm run clean && npm run lint && npm run compile -- --sourceMap --watch"
  }
}
